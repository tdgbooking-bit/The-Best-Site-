        <script>
            const enterBtn = document.getElementById('enter-btn');
            const subscribeForm = document.getElementById('subscribe-form');
            const historyMessage = document.getElementById('history-message');
            const subscribeLabel = document.getElementById('subscribe-label');
            const subscribeBtn = subscribeForm.querySelector('.subscribe-btn');
            enterBtn.addEventListener('click', function() {
                enterBtn.style.display = 'none';
                subscribeForm.style.display = 'flex';
            });
            subscribeForm.addEventListener('submit', function(e) {
                e.preventDefault();
                subscribeForm.reset();
                subscribeLabel.style.display = 'none';
                subscribeBtn.style.display = 'none';
                historyMessage.style.display = 'block';
            });
        </script>
